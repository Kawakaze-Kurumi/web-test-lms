@model IEnumerable<web_test_lms.Models.Currency>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" style="border: 1px solid gray">
    <thead class="table-dark">
        <tr>
            <th class="col-3">
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th class="col-3">
                @Html.DisplayNameFor(model => model.CurrName)
            </th>
            <th class="col-3">
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th class="col-1">

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="col-3">
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td class="col-3">
                @Html.DisplayFor(modelItem => item.CurrName)
            </td>
                <td class="col-3">
                @Html.DisplayFor(modelItem => item.Note)
            </td>
                <td class="col-1" style="text-align: right; padding-right: 20px " >
                    <a asp-action="Edit" asp-route-id="@item.Code" class="btn btn-primary">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Code" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
