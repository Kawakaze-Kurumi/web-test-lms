<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web_test_lms</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web_test_lms.styles.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-sm-2 bg-dark text-white vh-100 p-3">
                <h4 class="text-center">web_test_lms</h4>
                <a class="d-block text-white text-decoration-none py-2" asp-controller="Home" asp-action="Index">🏠 Home</a>
                <a class="d-block text-white text-decoration-none py-2" asp-controller="Home" asp-action="Privacy">🔒 Privacy</a>
                <a class="d-block text-white text-decoration-none py-2" asp-controller="Agents" asp-action="Index">👥 Agents</a>
            </nav>

            <!-- Nội dung chính -->
            <div class="col-sm-10">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; 2025 - web_test_lms - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
