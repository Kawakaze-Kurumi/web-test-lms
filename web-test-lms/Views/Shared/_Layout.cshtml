<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web_test_lms</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/web_test_lms.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <style>
        
        /* CSS cho sidebar */
        .wrapper {
        display: flex;
        height: 100vh; /* Chiều cao toàn màn hình */
    }

    .sidebar {
        width: 250px; /* Độ rộng sidebar */
        background-color: #343a40; /* Màu nền */
        padding: 20px;
        color: white;
    }

    .container {
        flex-grow: 1; /* Tự động mở rộng để chiếm phần còn lại */
        padding: 20px;
    }


        .sidebar {
            width: 250px;
            height: 100vh; /* Chiều cao toàn màn hình */
            position: fixed;
            left: 0;
            top: 0;
            background-color: #343a40; /* Màu nền */
            padding-top: 20px;
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .content {
            margin-left: 260px; /* Đẩy nội dung chính sang bên phải */
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        
    </header>
    <div class="wrapper">
        <div class="col-sm-2">
            <div class="sidebar">
                <h4 class="text-white text-center">web_test_lms</h4>
                <a asp-area="" asp-controller="Home" asp-action="Index">🏠 Home</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">🔒 Privacy</a>
                <a asp-area="" asp-controller="Agents" asp-action="Index">👥 Agents</a>
            </div>
        </div>
        <div class="sol-sm-8">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - web_test_lms - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>

</html>
